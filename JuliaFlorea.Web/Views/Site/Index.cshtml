

@model IEnumerable<JuliaFlorea.DataModel.Site>

@{
    ViewBag.Title = "Sites";
    var headerCellStyle = "border: 1px solid #836096; border-color: #836096; padding: 8px; text-align: center;";
    var cellStyle = "border: 1px solid #836096; border-color: #836096; padding: 8px; text-align: center; vertical-align: middle;";
    var titleStyle = "text-align: center;";
    var buttonStyle = "background-color: #836096; color: white; border: none; padding: 5px 10px; text-align: center; text-decoration: none; display: inline-block; font-size: 12px; margin: 2px;";
}

<h2 style="@titleStyle">Sites</h2>

<p>
    <a href="@Url.Action("Create")" style="@buttonStyle">Create New</a>
</p>
<table class="table">
    <tr>
        <th style="@headerCellStyle">
            @Html.DisplayNameFor(model => model.SiteId)
        </th>
        <th style="@headerCellStyle">
            @Html.DisplayNameFor(model => model.SiteName)
        </th>

        <td style="@cellStyle">
            @Html.DisplayNameFor(model => model.Country.CountryName)
        </td>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
             <td style="@cellStyle">
                @Html.DisplayFor(modelItem => item.SiteId)
            </td>
            <td style="@cellStyle">
                @Html.DisplayFor(modelItem => item.SiteName)
            </td>
            
            <td style="@cellStyle">
                @Html.DisplayFor(modelItem => item.Country.CountryName)
            </td>

            <td>


                <a href="@Url.Action("Edit", new { id = item.SiteId })" style="@buttonStyle">Edit</a>
                <a href="@Url.Action("Details", new { id = item.SiteId })" style="@buttonStyle">Details</a>
                <a href="@Url.Action("Delete", new { id = item.SiteId })" style="@buttonStyle">Delete</a>
                <a href="@Url.Action("RequestDrugs", new { siteId = item.SiteId })" style="@buttonStyle">Request Drugs</a>
                @*@Html.ActionLink("Request Drugs", "RequestDrugs", new { siteId = item.SiteId })*@
            </td>
        </tr>
    }

</table>
